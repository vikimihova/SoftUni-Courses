@using CinemaApp.Web.ViewModels.Cinema
@model IEnumerable<CinemaIndexViewModel>

<h2>Cinemas</h2>

<div class="row">
    @foreach (var cinema in Model)
    {
        <div class="col-md-2">
            <div class="card mb-2 shadow-sm">
                <img src="~/images/The-Felloship-of-the-Ring.jpg" class="card-img-top" alt="Cinema Image" style="width: 200px; object-fit: contain;">
                <div class="card-body">
                    <h5 class="card-title">@cinema.Name</h5>
                    <p class="card-text">@cinema.Location</p>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path d="M316.9 18C311.6 7 300.4 0 288.1 0s-23.4 7-28.8 18L195 150.3 51.4 171.5c-12 1.8-22 10.2-25.7 21.7s-.7 24.2 7.9 32.7L137.8 329 113.2 474.7c-2 12 3 24.2 12.9 31.3s23 8 33.8 2.3l128.3-68.5 128.3 68.5c10.8 5.7 23.9 4.9 33.8-2.3s14.9-19.3 12.9-31.3L438.5 329 542.7 225.9c8.6-8.5 11.7-21.2 7.9-32.7s-13.7-19.9-25.7-21.7L381.2 150.3 316.9 18z" /></svg>
                    <a asp-action="Details" asp-route-id="@cinema.Id" class="btn btn-primary">View Movie Program</a>
                </div>
            </div>
        </div>
    }
    <div class="col-md-2">
        <div class="card mb-2 shadow-sm">
            <img src="~/images/memoirs-of-hadrian.jpg" class="card-img-top" alt="Cinema Image" style="width: 200px; object-fit: contain;">
            <div class="card-body">
                <h5 class="card-title">Name</h5>
                <p class="card-text">Location</p>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path d="M316.9 18C311.6 7 300.4 0 288.1 0s-23.4 7-28.8 18L195 150.3 51.4 171.5c-12 1.8-22 10.2-25.7 21.7s-.7 24.2 7.9 32.7L137.8 329 113.2 474.7c-2 12 3 24.2 12.9 31.3s23 8 33.8 2.3l128.3-68.5 128.3 68.5c10.8 5.7 23.9 4.9 33.8-2.3s14.9-19.3 12.9-31.3L438.5 329 542.7 225.9c8.6-8.5 11.7-21.2 7.9-32.7s-13.7-19.9-25.7-21.7L381.2 150.3 316.9 18z" /></svg>
                <a asp-action="Details" asp-route-id="Id" class="btn btn-primary">View Cinema Program</a>
            </div>
        </div>
    </div>
</div>

<style>
    .card svg {
        height: 1.5em;        
        cursor: pointer;
        fill: grey;
        transition: fill 0.3s ease-in;
    }

    .card svg:hover {
        fill: rgb(231, 36, 95);
    }
</style>
